{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session State Schema",
  "description": "JSON schema for .codeframe/session_state.json file",
  "type": "object",
  "required": [
    "last_session",
    "next_actions",
    "current_plan",
    "active_blockers",
    "progress_pct"
  ],
  "properties": {
    "last_session": {
      "type": "object",
      "description": "Information about the previous session",
      "required": [
        "summary",
        "completed_tasks",
        "timestamp"
      ],
      "properties": {
        "summary": {
          "type": "string",
          "description": "Human-readable summary of completed tasks in last session",
          "maxLength": 500,
          "examples": [
            "Completed Task #27 (JWT refresh tokens), Task #28 (Add token validation)"
          ]
        },
        "completed_tasks": {
          "type": "array",
          "description": "IDs of tasks completed in last session",
          "maxItems": 10,
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "examples": [
            [27, 28]
          ]
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp of session end",
          "format": "date-time",
          "examples": [
            "2025-11-20T10:30:00"
          ]
        }
      }
    },
    "next_actions": {
      "type": "array",
      "description": "Next 5 pending actions in priority order",
      "maxItems": 5,
      "items": {
        "type": "string",
        "maxLength": 200
      },
      "examples": [
        [
          "Fix JWT validation in kong-gateway.ts (Task #29)",
          "Add refresh token tests (Task #30)",
          "Update auth documentation (Task #31)"
        ]
      ]
    },
    "current_plan": {
      "type": [
        "string",
        "null"
      ],
      "description": "Current task/plan being worked on",
      "maxLength": 500,
      "examples": [
        "Implement OAuth 2.0 authentication with JWT tokens",
        null
      ]
    },
    "active_blockers": {
      "type": "array",
      "description": "Active blockers requiring user input",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": [
          "id",
          "question",
          "priority"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique blocker ID",
            "minimum": 1
          },
          "question": {
            "type": "string",
            "description": "The question or issue blocking progress",
            "maxLength": 500
          },
          "priority": {
            "type": "string",
            "description": "Priority level of the blocker",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        }
      },
      "examples": [
        [
          {
            "id": 5,
            "question": "Which OAuth provider should we use for SSO?",
            "priority": "high"
          },
          {
            "id": 6,
            "question": "Should we support multiple OAuth providers?",
            "priority": "medium"
          }
        ]
      ]
    },
    "progress_pct": {
      "type": "number",
      "description": "Overall project progress percentage",
      "minimum": 0.0,
      "maximum": 100.0,
      "examples": [
        68.5
      ]
    }
  },
  "additionalProperties": false
}
